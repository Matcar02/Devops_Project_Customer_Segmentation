name: DataPreparation

conda_env: conda.yaml

entry_points:
  cleaning:
    command: "python cleaning.py {filepath}"
    parameters:
      filepath:
        type: string
        default: ""
        description: "The path to the CSV file to clean."

  encoding:
    command: "python encoding.py --filepath {filepath}"
    parameters:
      filepath:
        type: string
        default: "default"
        description: "The path to the cleaned CSV file for encoding. Optional, will use latest artifact if not provided."
   
  rfm:
    command: "python rfm.py --filepath {filepath}"
    parameters:
      filepath:
        type: string
        default: "default"
        description: "The path to the encoded CSV file for RFM analysis."
