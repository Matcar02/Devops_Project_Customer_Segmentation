name: DimensionalityReduction

conda_env: conda.yaml

entry_points:
  pca:
    command: "python pca.py --rfm {rfm} --customer_segmentation {customer_segmentation}"
    parameters:
      rfm:
        type: string
        default: "default"
        description: "Path to the RFM data CSV file or 'default' to use the latest W&B artifact"
      customer_segmentation:
        type: string
        default: "default"
        description: "Path to the customer segmentation CSV file or 'default' to use the latest W&B artifact"
