name: DimensionalityReduction

conda_env: conda.yaml

entry_points:
  comparison:
    command: "python comparison.py {input_filepath}"
    parameters:
      input_filepath:
        type: string
        default: ""
        description: "The path to the input CSV file for PCA vs. Spectral comparison."

  pca:
    command: "python pca.py --filepath {filepath} --filepath_rfm {filepath_rfm}"
    parameters:
      filepath:
        type: string
        default: "default"
        description: "Path to the CSV file for DataFrame."
      filepath_rfm:
        type: string
        default: "default"
        description: "Path to the CSV file for RFM Dataset."
