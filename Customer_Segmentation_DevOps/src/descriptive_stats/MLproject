name: DescriptiveStatistics

conda_env: conda.yaml

entry_points:
  insights:
    command: "python insights.py --filepath {filepath}"
    parameters:
      filepath:
        type: string
        default: "default" 
        description: "Path to the input CSV file for generating insights."


  stats:
    command: "python stats.py --filepath {filepath}"
    parameters:
      filepath:
        type: string
        default: "default"
        description: "The path to the input CSV file for statistical analysis."


